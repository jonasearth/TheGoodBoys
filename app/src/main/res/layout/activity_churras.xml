<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChurrasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Uelcome To The Good Churras Calculator"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Selecione a quantidade de Corno:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/qt_pes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Quantos bebem Vodka:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/qt_vodka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Quantos bebem Cerveja:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/qt_cerva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Quantos bebem Refri:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/qt_refri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Quantos Bebem Suco:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/qt_suco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Selecione os tipos de Carne:"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cb_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calabresa"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cb_frango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frango"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cb_cupim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cupim"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cb_picanha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picanha"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cb_alcatara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alcatara"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Terá BABA????"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cb_baba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BABA??"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/qt_baba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Quantos jogarão o baba"
                android:inputType="numberSigned"
                android:text="0" />

            <Button
                android:id="@+id/btn_churras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Churras" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>